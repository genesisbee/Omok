<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gameTilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuTitle"
            android:textAlignment="center"
            android:textSize="48sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/topButtons"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <Button
                android:id="@+id/humanButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/human_mode"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/compButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/comp_mode"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/networkButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/network_mode"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </LinearLayout>
    <!-- to dynamically add the strategy fragment-->
    <FrameLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>